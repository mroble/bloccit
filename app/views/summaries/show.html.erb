<h1><%= @summary.name %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @summary.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@summary).edit? %>
      <%= link_to "Edit", new_topic_summary_path(@topic, @post, @summary), class: 'btn btn-success' %>
